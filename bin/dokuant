# vi: set ft=bash :

set -e
#clear

source utils.sh
source dokuant_lib.sh


log "       Dokuan       "
log "____________________"
log ""


function usage() {
    log "Usage: $0 command [OPTIONS]"
}


PROJECT=$(get_project_name)


case "$1" in
    create-user)
        create_dokku_user $USER
        success "Done"
    
    ;;
  
    create-app)
        #FIXME If directory clean, stop after initiating git
        create_dokku_app $USER $PROJECT
        success "Done"
  
    ;;
  
    deploy)
        #FIXME Can't give multiple words as comment
        if [[ $# == 2 ]]; then
            commit_comment=$2
        else
            commit_comment="Automatic commit"
        fi
        deploy_dokku_app $PROJECT $commit_comment
        success "Done"

    ;;

    logs)
        log "Fetching logs"
        remote_execution "docker logs $(get_container_id $PROJECT)"
        success "Done"

    ;;

    restart)
        log "Restarting application"
        remote_execution "docker restart $(get_container_id $PROJECT)"
        success "Done"

    ;;

    execute)
        run_in_container $PROJECT    

    ;;

    connect)
        #FIXME For now only ssh
        interpreter=$2
        repl_container $PROJECT $interpreter

    ;;

    *)
        usage
        die "..."
    ;;
esac
